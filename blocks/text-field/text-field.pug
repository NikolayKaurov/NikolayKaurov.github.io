mixin text-field({ name = 'undefined-name', placeholder = 'text', label = '', description = '' } = { name: 'undefined-name', placeholder: 'text', label: '', description: '' })
  .text-field
    .text-field__header
      if (label)
        p.text-field__label= label
      if (description)
        p.text-field__label= description
    input.text-field__input(name= name placeholder= placeholder type='text')