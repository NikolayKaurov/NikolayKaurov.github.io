mixin text-field({ name, placeholder, label, description } = {})
  -
    if (name === undefined) {
      name = '';
    }
    if (placeholder === undefined) {
      placeholder = '';
    }
    if (label === undefined) {
      label = '';
    }
    if (description === undefined) {
      description = '';
    }

  .text-field
    .text-field__header
      if (label)
        p.text-field__label= label
      if (description)
        p.text-field__label= description
    input.text-field__input(name= name placeholder= placeholder type='text')