mixin paginator({ length = 1, label = '', demo = '' } = {})
  -
    let i = 1;
    let align = 'center';
    if (length < 1) {
      length = 1;
    } else if (length > 99) {
      length = 99;
    } else {
      length = Math.round(length);
    }
    if (demo === 'demo') {
      align = 'flex-start';
    }

  .paginator.js-paginator(data-length= length data-active="1")
    .paginator__label= label
    .paginator__body.js-paginator__body(style= `justify-content: ${align}`)
      .paginator__item.js-paginator__item(data-number="back") arrow_back
      while i <= length
        .paginator__item.js-paginator__item(data-number= i)= i++
      .paginator__item.js-paginator__item(data-number="forward") arrow_forward
    .paginator__description-container(style= `justify-content: ${align}`)
      .paginator__description.js-paginator__description
