mixin subscription({ label = '', narrow = false } = {})
  -
    let modifier = '';
    if (narrow) {
      modifier = 'subscription_narrow';
    }

  form.subscription.js-subscription(class= modifier)
    if (label)
      p.subscription__label= label
    .subscription__wrapper
      input.subscription__input.js-subscription__input(name='subscription-email' placeholder='Email' type='text')
      input.subscription__submit.js-subscription__submit(type='submit' value='arrow_forward' disabled)
