mixin datepicker(name, modifiers, labelArrival, labelDeparture)
  .datepicker
    input.date-arrival(type='date' name= name + '-arrival')
    input.date-departure(type='date' name= name + '-departure')
    .datepicker-drop(tabindex=-1)
      +datepicker-date('datepicker-arrival', labelArrival)
      +datepicker-date('datepicker-departure', labelDeparture)
    .datepicker-down
      .datepicker-buttons
        button.datepicker-reset(disabled tabindex=-1) очистить
        button.datepicker-confirm(disabled tabindex=-1) применить
      .datepicker-calendar
        table.datepicker-table
      .datepicker-month
        button.datepicker-back(disabled tabindex=-1) arrow_back
        .datepicker-month-value
        button.datepicker-forth(tabindex=-1) arrow_forward

mixin datepicker-date(type, label)
  .datepicker-date
    .datepicker-header
      = label
    .datepicker-expand(tabindex=0 class= type)
      .datepicker-value ДД.ММ.ГГГГ



